    "numberOfCustomersOutsideOfEU",
    "isPrincipalPlaceOfBusinessForLastThreeYears",
    "registeredAddress",
    "principalTradingBusinessAddress",
    "hasOtherStorageSites",
    "contactAddress",
    "companyOfficials",
    "contactPerson"
  ],
  "allOf": [
    {
      "anyOf": [
        {
          "properties": {
            "isNewFulfilmentBusiness": {
              "enum": [
                true
              ]
            }
          },
          "required": [
            "intendedStartTradingDate"
          ]
        },
        {
          "properties": {
            "isNewFulfilmentBusiness": {
              "enum": [
                false
              ]
            }
          },
          "not": {
            "required": [
              "intendedStartTradingDate"
            ]
          }
        }
      ]
    },
    {
      "anyOf": [
        {
          "properties": {
            "hasTradingName": {
              "enum": [
                true
              ]
            }
          },
          "required": [
            "tradingName"
          ]
        },
        {
          "properties": {
            "hasTradingName": {
              "enum": [
                false
              ]
            }
          },
          "not": {
